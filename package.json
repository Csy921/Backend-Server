{
  "name": "whatsapp-wechat-automation-backend",
  "version": "1.0.0",
  "description": "Backend automation system connecting WhatsApp sales groups with WeChat supplier groups",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "setup": "node scripts/setup-connection.js",
    "test-connections": "node scripts/test-connections.js",
    "test-wechat": "node scripts/test-wechat-webhook.js",
    "validate": "node scripts/validate-config.js",
    "logs": "node scripts/view-logs.js",
    "logs:watch": "node scripts/view-logs.js --watch",
    "logs:wechaty": "node scripts/view-logs.js --filter WECHATY",
    "logs:error": "node scripts/view-logs.js --file error.log",
    "logs:convert": "node scripts/convert-logs-to-json.js"
  },
  "keywords": [
    "whatsapp",
    "wechat",
    "automation",
    "backend"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0",
    "node-cron": "^3.0.3",
    "uuid": "^9.0.1"
  },
  "optionalDependencies": {
    "wechaty": "^1.20.2",
    "wechaty-puppet-wechat": "^1.18.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}

